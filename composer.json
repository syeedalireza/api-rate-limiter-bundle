{
    "name": "syeedalireza/api-rate-limiter-bundle",
    "description": "Enterprise-grade API rate limiting for Symfony. Supports multiple algorithms (Token Bucket, Sliding Window, Fixed Window), distributed limiting with Redis, and comprehensive analytics. Perfect for production APIs requiring precise request throttling.",
    "type": "symfony-bundle",
    "keywords": [
        "symfony",
        "rate-limiting",
        "api",
        "throttling",
        "token-bucket",
        "sliding-window",
        "redis",
        "distributed",
        "middleware",
        "production"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Alireza Aminzadeh",
            "email": "alireza.aminzadeh@hotmail.com",
            "homepage": "https://github.com/syeedalireza"
        }
    ],
    "require": {
        "php": "^8.2",
        "symfony/framework-bundle": "^6.4|^7.0",
        "symfony/http-foundation": "^6.4|^7.0",
        "symfony/http-kernel": "^6.4|^7.0",
        "symfony/config": "^6.4|^7.0",
        "symfony/dependency-injection": "^6.4|^7.0",
        "predis/predis": "^2.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^2.0",
        "phpstan/phpstan-symfony": "^2.0",
        "vimeo/psalm": "^6.0",
        "friendsofphp/php-cs-fixer": "^3.64",
        "infection/infection": "^0.29",
        "qossmic/deptrac": "^2.0",
        "phpbench/phpbench": "^1.3",
        "symfony/var-dumper": "^6.4|^7.0",
        "symfony/phpunit-bridge": "^6.4|^7.0"
    },
    "autoload": {
        "psr-4": {
            "Syeedalireza\\RateLimiterBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Syeedalireza\\RateLimiterBundle\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "infection/extension-installer": true
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse src tests --level=9",
        "psalm": "psalm --show-info=true",
        "cs-fix": "php-cs-fixer fix",
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "deptrac": "deptrac analyse",
        "infection": "infection --min-msi=90 --min-covered-msi=95",
        "benchmark": "phpbench run --report=default",
        "quality": [
            "@cs-check",
            "@phpstan",
            "@psalm",
            "@test"
        ]
    }
}
